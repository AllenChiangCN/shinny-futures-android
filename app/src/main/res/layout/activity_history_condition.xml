<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:keepScreenOn="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/quote_background">

        <include
            android:id="@+id/include"
            layout="@layout/view_toolbar" />

        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_query">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/layout_height_item_fragment_quote"
                    android:background="@color/black_dark"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/condition_order_name"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:maxLines="1"
                        android:paddingStart="@dimen/padding_5dp"
                        android:text="合约"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/font_size_normal"
                        app:autoSizeMaxTextSize="@dimen/font_size_normal"
                        app:autoSizeMinTextSize="@dimen/font_size_tiny_high"
                        app:autoSizeStepGranularity="1sp"
                        app:autoSizeTextType="uniform" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/quote_divider_title" />

                    <TextView
                        android:id="@+id/condition_order_status"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="状态"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/font_size_normal"
                        app:autoSizeMaxTextSize="@dimen/font_size_normal"
                        app:autoSizeMinTextSize="@dimen/font_size_tiny_high"
                        app:autoSizeStepGranularity="1sp"
                        app:autoSizeTextType="uniform" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/quote_divider_title" />

                    <TextView
                        android:id="@+id/condition_order_type"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="类型"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/font_size_normal"
                        app:autoSizeMaxTextSize="@dimen/font_size_normal"
                        app:autoSizeMinTextSize="@dimen/font_size_tiny_high"
                        app:autoSizeStepGranularity="1sp"
                        app:autoSizeTextType="uniform" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/quote_divider_title" />

                    <TextView
                        android:id="@+id/condition_order_condition"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="条件"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/font_size_normal"
                        app:autoSizeMaxTextSize="@dimen/font_size_normal"
                        app:autoSizeMinTextSize="@dimen/font_size_tiny_high"
                        app:autoSizeStepGranularity="1sp"
                        app:autoSizeTextType="uniform" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/quote_divider_title" />

                    <TextView
                        android:id="@+id/condition_order_info"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="报单"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/font_size_normal"
                        app:autoSizeMaxTextSize="@dimen/font_size_normal"
                        app:autoSizeMinTextSize="@dimen/font_size_tiny_high"
                        app:autoSizeStepGranularity="1sp"
                        app:autoSizeTextType="uniform" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/quote_divider_title" />

                    <TextView
                        android:id="@+id/condition_order_expiry"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="有效期"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/font_size_normal"
                        app:autoSizeMaxTextSize="@dimen/font_size_normal"
                        app:autoSizeMinTextSize="@dimen/font_size_tiny_high"
                        app:autoSizeStepGranularity="1sp"
                        app:autoSizeTextType="uniform" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/quote_divider_title" />

                    <TextView
                        android:id="@+id/condition_order_insert_time"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="设置时间"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/font_size_normal"
                        app:autoSizeMaxTextSize="@dimen/font_size_normal"
                        app:autoSizeMinTextSize="@dimen/font_size_tiny_high"
                        app:autoSizeStepGranularity="1sp"
                        app:autoSizeTextType="uniform" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:fadeScrollbars="false"
                    android:scrollbarSize="@dimen/scroll_bar_size_small"
                    android:scrollbarThumbVertical="@color/text_gray_light"
                    android:scrollbars="vertical"
                    android:verticalScrollbarPosition="left"
                    android:id="@+id/rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/quote_background" />

            </LinearLayout>
        </HorizontalScrollView>


        <TextView
            android:id="@+id/textViewResponsibility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="《条件单免责条款》"
            android:textColor="@drawable/activity_condition_order_responsibility_selector"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:text="条件单设置日期"
            android:textColor="@color/text_white"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/button_query"
            app:layout_constraintStart_toStartOf="@+id/include"
            app:layout_constraintTop_toTopOf="@+id/button_query" />

        <Button
            android:id="@+id/button_query"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/activity_condition_order_save_selector"
            android:text="查询"
            android:textColor="@color/text_white"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include" />

        <TextView
            android:id="@+id/textView_action_day"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/activity_condition_order_history_selector"
            android:drawableEnd="@mipmap/ic_query_builder_white_24dp"
            android:gravity="center"
            android:paddingEnd="@dimen/padding_10dp"
            android:textColor="@color/text_white"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/button_query"
            app:layout_constraintEnd_toStartOf="@+id/button_query"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toTopOf="@+id/button_query" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
