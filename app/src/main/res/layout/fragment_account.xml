<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.shinnytech.futures.utils.MathUtils"></import>

        <variable
            name="account"
            type="com.shinnytech.futures.model.bean.accountinfobean.AccountEntity"></variable>
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:keepScreenOn="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_5dp"
                android:layout_marginTop="@dimen/margin_5dp"
                android:layout_marginEnd="@dimen/margin_5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:text="@string/account_activity_user"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_normal"
                    app:autoSizeMaxTextSize="@dimen/font_size_normal"
                    app:autoSizeMinTextSize="@dimen/font_size_tiny_high"
                    app:autoSizeStepGranularity="1sp"
                    app:autoSizeTextType="uniform" />

                <TextView
                    android:id="@+id/account_user"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:text="@{account.user_id}"
                    android:textAlignment="textEnd"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_normal"
                    app:autoSizeMaxTextSize="@dimen/font_size_normal"
                    app:autoSizeMinTextSize="@dimen/font_size_tiny_high"
                    app:autoSizeStepGranularity="1sp"
                    app:autoSizeTextType="uniform" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_5dp"
                android:layout_marginTop="@dimen/margin_5dp"
                android:layout_marginEnd="@dimen/margin_5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:text="权益"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_normal"
                    app:autoSizeMaxTextSize="@dimen/font_size_normal"
                    app:autoSizeMinTextSize="@dimen/font_size_tiny_high"
                    app:autoSizeStepGranularity="1sp"
                    app:autoSizeTextType="uniform" />

                <TextView
                    android:id="@+id/balance"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:text="@{MathUtils.round(account.balance, 0)}"
                    android:textAlignment="textEnd"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_normal"
                    app:autoSizeMaxTextSize="@dimen/font_size_normal"
                    app:autoSizeMinTextSize="@dimen/font_size_tiny_high"
                    app:autoSizeStepGranularity="1sp"
                    app:autoSizeTextType="uniform" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_5dp"
                android:layout_marginTop="@dimen/margin_5dp"
                android:layout_marginEnd="@dimen/margin_5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:text="可用"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_normal"
                    app:autoSizeMaxTextSize="@dimen/font_size_normal"
                    app:autoSizeMinTextSize="@dimen/font_size_tiny_high"
                    app:autoSizeStepGranularity="1sp"
                    app:autoSizeTextType="uniform" />

                <TextView
                    android:id="@+id/available"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:text="@{MathUtils.round(account.available, 0)}"
                    android:textAlignment="textEnd"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_normal"
                    app:autoSizeMaxTextSize="@dimen/font_size_normal"
                    app:autoSizeMinTextSize="@dimen/font_size_tiny_high"
                    app:autoSizeStepGranularity="1sp"
                    app:autoSizeTextType="uniform" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_5dp"
                android:layout_marginTop="@dimen/margin_5dp"
                android:layout_marginEnd="@dimen/margin_5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:text="使用率"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_normal"
                    app:autoSizeMaxTextSize="@dimen/font_size_normal"
                    app:autoSizeMinTextSize="@dimen/font_size_tiny_high"
                    app:autoSizeStepGranularity="1sp"
                    app:autoSizeTextType="uniform" />

                <TextView
                    android:id="@+id/using_ratio"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:text='@{MathUtils.subZeroAndDot(MathUtils.round(MathUtils.multiply("100",MathUtils.divide(account.margin, account.balance)), 2)) + "%"}'
                    android:textAlignment="textEnd"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_normal"
                    app:autoSizeMaxTextSize="@dimen/font_size_normal"
                    app:autoSizeMinTextSize="@dimen/font_size_tiny_high"
                    app:autoSizeStepGranularity="1sp"
                    app:autoSizeTextType="uniform" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_5dp"
                android:layout_marginTop="@dimen/margin_5dp"
                android:layout_marginEnd="@dimen/margin_5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:text="持仓盈亏"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_normal"
                    app:autoSizeMaxTextSize="@dimen/font_size_normal"
                    app:autoSizeMinTextSize="@dimen/font_size_tiny_high"
                    app:autoSizeStepGranularity="1sp"
                    app:autoSizeTextType="uniform" />

                <TextView
                    android:id="@+id/position_profit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:text="@{MathUtils.round(account.position_profit, 2)}"
                    android:textAlignment="textEnd"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_normal"
                    app:autoSizeMaxTextSize="@dimen/font_size_normal"
                    app:autoSizeMinTextSize="@dimen/font_size_tiny_high"
                    app:autoSizeStepGranularity="1sp"
                    app:autoSizeTextType="uniform" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_5dp"
                android:layout_marginTop="@dimen/margin_5dp"
                android:layout_marginEnd="@dimen/margin_5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:text="平仓盈亏"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_normal"
                    app:autoSizeMaxTextSize="@dimen/font_size_normal"
                    app:autoSizeMinTextSize="@dimen/font_size_tiny_high"
                    app:autoSizeStepGranularity="1sp"
                    app:autoSizeTextType="uniform" />

                <TextView
                    android:id="@+id/close_profit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:text="@{MathUtils.round(account.close_profit, 2)}"
                    android:textAlignment="textEnd"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_normal"
                    app:autoSizeMaxTextSize="@dimen/font_size_normal"
                    app:autoSizeMinTextSize="@dimen/font_size_tiny_high"
                    app:autoSizeStepGranularity="1sp"
                    app:autoSizeTextType="uniform" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_5dp"
                android:layout_marginTop="@dimen/margin_5dp"
                android:layout_marginEnd="@dimen/margin_5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:text="占用保证金"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_normal"
                    app:autoSizeMaxTextSize="@dimen/font_size_normal"
                    app:autoSizeMinTextSize="@dimen/font_size_tiny_high"
                    app:autoSizeStepGranularity="1sp"
                    app:autoSizeTextType="uniform" />

                <TextView
                    android:id="@+id/margin_using"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:text="@{MathUtils.round(account.margin, 2)}"
                    android:textAlignment="textEnd"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_normal"
                    app:autoSizeMaxTextSize="@dimen/font_size_normal"
                    app:autoSizeMinTextSize="@dimen/font_size_tiny_high"
                    app:autoSizeStepGranularity="1sp"
                    app:autoSizeTextType="uniform" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="@dimen/margin_5dp"
                android:layout_marginTop="@dimen/margin_5dp"
                android:layout_marginEnd="@dimen/margin_5dp">

                <Button
                    android:id="@+id/transfer_in"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:background="@color/launch"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="转入"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/transfer_out"
                    android:background="@color/launch"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="转出"
                    android:textColor="@color/white"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_width_half"
                android:layout_marginTop="@dimen/margin_5dp"
                android:background="@color/bg_gray_light_more" />

            <android.support.design.widget.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:tabIndicatorColor="@color/marker_yellow">

                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="持仓" />

                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="挂单" />

                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="委托" />

                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="成交" />

            </android.support.design.widget.TabLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/vp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></android.support.v4.view.ViewPager>

        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:visibility="gone"
            android:id="@+id/account_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="16dp"
            android:src="@mipmap/ic_watch_later_white_24dp"
            app:layout_anchorGravity="bottom|right|end" />

    </android.support.design.widget.CoordinatorLayout>
</layout>
