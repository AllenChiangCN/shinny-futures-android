<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data></data>

    <LinearLayout
        android:id="@+id/ll_condition_order"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_item_fragment_quote"
        android:background="@drawable/fragment_item_touch_bg"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/condition_order_name"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:maxLines="1"
            android:paddingStart="@dimen/padding_5dp"
            android:text="目标合约"
            android:textColor="@color/text_white"
            android:textSize="@dimen/font_size_normal"
            app:autoSizeMaxTextSize="@dimen/font_size_normal"
            app:autoSizeMinTextSize="@dimen/font_size_tiny_high"
            app:autoSizeStepGranularity="1sp"
            app:autoSizeTextType="uniform" />

        <View
            android:background="@color/quote_divider"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/condition_order_status"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:maxLines="1"
            android:text="运行 190910 18:30:01"
            android:textColor="@color/text_white"
            android:textSize="@dimen/font_size_normal"
            app:autoSizeMaxTextSize="@dimen/font_size_normal"
            app:autoSizeMinTextSize="@dimen/font_size_tiny_high"
            app:autoSizeStepGranularity="1sp"
            app:autoSizeTextType="uniform" />

        <View
            android:background="@color/quote_divider"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/condition_order_type"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="价格"
            android:maxLines="1"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="@dimen/font_size_tiny_high"
            app:autoSizeMaxTextSize="@dimen/font_size_normal"
            app:autoSizeStepGranularity="1sp"
            android:textColor="@color/text_white"
            android:textSize="@dimen/font_size_normal" />

        <View
            android:background="@color/quote_divider"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/condition_order_condition"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="190910 18:30:01"
            android:maxLines="1"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="@dimen/font_size_tiny_high"
            app:autoSizeMaxTextSize="@dimen/font_size_normal"
            app:autoSizeStepGranularity="1sp"
            android:textColor="@color/text_white"
            android:textSize="@dimen/font_size_normal" />

        <View
            android:background="@color/quote_divider"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/condition_order_info"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="市价 买入 开 3手"
            android:maxLines="1"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="@dimen/font_size_tiny_high"
            app:autoSizeMaxTextSize="@dimen/font_size_normal"
            app:autoSizeStepGranularity="1sp"
            android:textColor="@color/text_white"
            android:textSize="@dimen/font_size_normal" />

        <View
            android:background="@color/quote_divider"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/condition_order_expiry"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="永久"
            android:maxLines="1"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="@dimen/font_size_tiny_high"
            app:autoSizeMaxTextSize="@dimen/font_size_normal"
            app:autoSizeStepGranularity="1sp"
            android:textColor="@color/text_white"
            android:textSize="@dimen/font_size_normal" />

        <View
            android:background="@color/quote_divider"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/condition_order_time"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="190807 18:30:01"
            android:maxLines="1"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="@dimen/font_size_tiny_high"
            app:autoSizeMaxTextSize="@dimen/font_size_normal"
            app:autoSizeStepGranularity="1sp"
            android:textColor="@color/text_white"
            android:textSize="@dimen/font_size_normal" />

    </LinearLayout>
</layout>
