<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="@dimen/order_dialog_width"
    android:layout_height="@dimen/order_dialog_height"
    android:background="@drawable/fragment_order_dialog"
    android:orientation="vertical">

    <TextView
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认下单吗？"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_normal" />

    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/order_instrument_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="m1709"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/font_size_normal_more" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=", "
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/font_size_normal_more" />

        <TextView
            android:id="@+id/order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxEms="4"
            android:maxLines="1"
            android:text="1111"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/font_size_normal_more" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/margin_10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/order_direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="买开"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/font_size_normal_more" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=", "
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/font_size_normal_more" />

        <TextView
            android:id="@+id/order_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxEms="2"
            android:maxLines="1"
            android:text="1"
            android:textColor="@color/text_red"
            android:textStyle="bold"
            android:textSize="@dimen/font_size_normal_more" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手"
            android:textColor="@color/text_red"
            android:textStyle="bold"
            android:textSize="@dimen/font_size_normal_more" />

        <TextView
            android:id="@+id/order_comma1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=", "
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/font_size_normal_more"
            android:visibility="gone" />

        <TextView
            android:id="@+id/order_direction1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="买开"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/font_size_normal_more"
            android:visibility="gone" />

        <TextView
            android:id="@+id/order_comma2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=", "
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/font_size_normal_more"
            android:visibility="gone" />

        <TextView
            android:id="@+id/order_volume1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/text_red"
            android:textStyle="bold"
            android:textSize="@dimen/font_size_normal_more"
            android:visibility="gone" />

        <TextView
            android:id="@+id/order_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手"
            android:textColor="@color/text_red"
            android:textStyle="bold"
            android:textSize="@dimen/font_size_normal_more"
            android:visibility="gone" />

    </LinearLayout>


    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/line_width"
        android:background="@color/dialog_order_divider"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/order_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:background="@null"
            android:textColor="@color/dialog_order_button_text"
            android:textSize="@dimen/font_size_normal_high" />

        <View
            android:layout_width="@dimen/line_width"
            android:layout_height="wrap_content"
            android:background="@color/dialog_order_divider"></View>

        <Button
            android:id="@+id/order_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:background="@null"
            android:textColor="@color/dialog_order_button_text"
            android:textSize="@dimen/font_size_normal_high" />

    </LinearLayout>

</LinearLayout>